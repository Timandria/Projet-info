void Ecran_titre(){
    
  int selection=5;                      // Valeur nÃ©cessaire pour rentrer dans la boucle while

  printf("\x1b[34m----------------------------------\n");
  printf("\x1b[34m--------------------------------\n");
  printf("\n");

  printf("\x1b[32mBienvenue sur CY - Crush ! :D\n ");        // Message d'accueil
  
  printf("\n");
  printf("\x1b[34m--------------------------------\n");  
  printf("\x1b[34m----------------------------------\n");
  printf(PCOLOR("%d"),0);

  printf("\n \n");

  printf("\x1b[32m1." "\x1B[36mNouvelle partie\n\n");               // Interface Menu muni de 4 options
  printf("\x1b[32m2." "\x1B[36mReprendre\n\n");
  printf("\x1b[32m3." "\x1B[36mCrÃ©dits\n\n");
  printf("\x1B[31m4. Quitter le jeu\n\n\n");
  printf(PCOLOR("%d"),0);
  
  
  

  while (selection<1 || selection>4) {
    
